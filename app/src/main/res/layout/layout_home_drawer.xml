<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFC79AEC"
        android:padding="30dp">
        <ImageView
            android:id="@+id/orgLogoImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_nav_drawer"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vivek coder"
            android:textSize="18sp"
            android:textColor="#FFEE2011"/>
            <TextView
                android:id="@+id/userEmailTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vivek@gmail.com"
                android:textColor="#FF20600C"
            android:textSize="16sp"/>

            <TextView
                android:id="@+id/oidTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oid"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/orgNameTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="orgName"
                android:textSize="16sp"/>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>